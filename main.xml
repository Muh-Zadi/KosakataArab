<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kosakata"
    tools:context="com.zadi.volley.RecycleView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/switcher"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgViewOne"
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:src="@drawable/no_available" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtIndo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/teks_indo"
            android:gravity="center"
            android:text="No Text" />

        <TextView
            android:id="@+id/txtArab"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/teks_arab"
            android:gravity="center"
            android:text="No Text" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvhape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer" />


</RelativeLayout>
